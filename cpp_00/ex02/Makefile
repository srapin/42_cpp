FLAGS = -std=c++98 -Wall -Wextra -Werror -g3

NAME = account
CC = c++
SRCS = ./Account.cpp ./tests.cpp

OBJS = $(SRCS:.cpp=.o)
	
$(NAME): $(OBJS)
	$(CC) $(FLAGS) $^ -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)
	
re: fclean $(NAME)
